# HW_1 of my first CS_172 Class


Socialite =[] # Intializes the Socialite List

class Social:

    def __init__(self,First_Name,Last_Name, Picture, Website, Description, UserID):
        self.Last = Last_Name
        self.First = First_Name
        self.Picture = Picture
        self.Website = Website
        self.Description = Description
        self.UserID = UserID

    def __str__(self):
        return "Name:{} {}".format(self.First, self.Last)

#Getter -------------------------------------------------------------------
    def get_LastName(self):
        return self.Last_Name

    def get_FirstName(self):
        return self.First_Name

    def get_Picture(self):
        return self.Picture

    def get_Website(self):
        return self.Website

    def get_Description(self):
        return self.Description

    def get_UserID(self):
        return self.UserID

 # Setters -----------------------------------------------------------------------

    def set_LastName(self, name):
        self.Last = name

    def set_FirstName(self, name):
        self.First = name

    def set_Picture(self, pic):
        self.Picture = pic

    def set_Website(self, website):
        self.Website = website

    def set_Description(self,Desc):
        self.Description = Desc

    def set_UserID(self,ID):
        self.UserID = ID

if __name__ == "__main__":
    # Instance of a Receipt Object
    print("Welcome to the Receipt Creator")
    Leaver = input("Enter the number of Socialite")
    count =0
    items = Social


    while count <= Leaver: # Probablly should use a fore loop


        counter = counter + 1
        n = input("Enter in a Name: ")
        p = input("Enter a pic: ")
        w = input("Enter a website: ")
        d = input("Enter a description: ")
        z = input("Enter a UserID: ")
        f, l = n.split(' ')

        thing = Social(f, l, p, w, d, z) # sets f,l,p,w,d,z arguments to the variable i
        Socialite.append(thing) #pass the arguemnt i as a list to the Item class


for t in Socialite:
